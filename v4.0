# üíÄ ULTIMATE WIPE CON AUTO-DISCOVERY + PHYSICAL BRICK
user_wipe() {
    echo "üíÄüíÄüíÄ ULTIMATE AUTO-DISCOVERY PHYSICAL WIPE (${#ALL_DEVICES[@]} devices) - Conferma [y/N]: " && read confirm
