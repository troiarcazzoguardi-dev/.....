HOST="128.255.220.144"
PORT="1883"
SID="17qja3r"
BASE="glp/0/${SID}/fb/dev/lon/"

# ARRAY DINAMICI - POPOLATI AUTOMATICAMENTE DA DISCOVERY
declare -a ALL_DEVICES=()
declare -a LIGHTS=()
